{
    "compilerOptions": {
		"moduleResolution": "node",
		"allowJs": true,
		"noEmit": true,
		"strict": true,
		"isolatedModules": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "es2015",
        "target": "ES5",
        "lib": [
            "es2018",
            "dom",
            "WebWorker.ImportScripts",
            "WebWorker"
        ],
        "types":["node","jquery"],
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "include": [
        "src"
    ]
}